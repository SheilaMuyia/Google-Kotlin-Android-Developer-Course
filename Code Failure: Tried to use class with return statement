fun main(){
    println("Hello Return Statement")
    ReturnFunction().a
}

class ReturnFunction(a:Int = 1):Int{
    var a = println("Code to return a function")
    return a;
}

//Following tutorial using Functions

//Using function to return statement instead of class
fun main(){
    println("Hello Kotlin")
    println(Dice().sides)
    println (Dice().roll())
}
class Dice(){
    //sides
    var sides = 6
    
    //print random number to roll with shorter code. Using return statement
    fun roll():String{
        var randomNumber = "Sheila"
        return randomNumber
    }
}
